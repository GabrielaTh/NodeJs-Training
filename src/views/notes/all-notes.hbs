<div class="row">
    {{#each notes}}
    <div class="col-md-5 col-10 offset-1 justify-content-around">
        <div class="card rounded text-center">
            <div class="card-body">
                <h2 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="far fa-edit"></i></a>
                </h2>
                <h3>
                    {{description}}
                </h3>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" value="DELETE" name="_method">
                    <button class="btn  btn-outline-danger btn-block btn-md" id="btn" type="submit">Delete</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="card mx-auto rounded">
        <div class="card-body">
            <h1>Welcome {{user.name}}!</h1>
            <p class="lead text-center">There are not notes yet.</p>
            <a href="/notes/add" class="btn btn-success btn-block rounded">Create One!</a>
        </div>
    </div>
    {{/each}}
</div>